        android:toYScale="2.0"
        android:duration="700"
        android:startOffset="300" />
    <scale
        android:interpolator=
            "@android:anim/accelerate_decelerate_interpolator"
        android:pivotX="50%"
        android:pivotY="50%"
        android:fromXScale="2.0"
        android:toXScale="0.5"
